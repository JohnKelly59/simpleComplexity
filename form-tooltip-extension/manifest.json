{
    "name": "Form Tooltip",
    "version": "1.1",
    "manifest_version": 3,
    "description": "Enhances web forms by automatically adding tooltip icons next to visible input, textarea, and select fields. When you hover over an icon, a concise, dynamically fetched definition is displayedâ€”with the option to refresh each tooltip individually. The extension also includes a floating speed dial interface for bulk refreshing and toggling tooltip visibility, plus it supports lookup of definitions for selected text.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "identity",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "backgroundScript.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "SC_COLOR.png",
                "icon128.png",
                "icon16.png",
                "icon48.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}