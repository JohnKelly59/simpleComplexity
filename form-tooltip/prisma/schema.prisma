// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model QuestionMapping {
  id       Int    @id @default(autoincrement())
  key      String @unique
  question String
  synonyms String[]
}

model User {
  id                Int       @id @default(autoincrement())
  firstName         String?
  lastName          String?
  email             String    @unique
  password          String
  subscriptionTier  String    @default("free") // 'free', 'tier1', 'tier2', 'tier3'
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
